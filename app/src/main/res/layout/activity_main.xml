<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back1"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_marginBottom="10dp"
            android:background="#5C5959"
            android:alpha=".7"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:shadowDx="1"
                android:text="Enter your age"
                style="@style/myTextViewStyle"/>

            <EditText
                android:id="@+id/edtAge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Enter your age here"
                android:inputType="number"
                style="@style/edit_text_style" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gender"
                style="@style/myTextViewStyle"/>

            <Spinner
                android:id="@+id/spGender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/mySpinnerItemStyle" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/myTextViewStyle"
                android:text="Chest Pain:" />

            <Spinner
                android:id="@+id/spChestPain"
                android:layout_width="match_parent"
                android:textColor="#FFF"
                style="@style/mySpinnerItemStyle"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/myTextViewStyle"
                android:text="Blood pressure in Rest" />

            <EditText
                android:id="@+id/edtBP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number"
                style="@style/edit_text_style"
                android:hint="Blood pressure" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/myTextViewStyle"
                android:text="Serum cholesterol in mg" />

            <EditText
                android:id="@+id/edtChol"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                style="@style/edit_text_style"
                android:hint="Enter chol in mg"
                android:inputType="number" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/myTextViewStyle"
                android:text="Fasting Blood Sugar > 120mg?" />

            <Spinner
                android:id="@+id/spFBS"
                android:layout_width="match_parent"
                style="@style/mySpinnerItemStyle"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/myTextViewStyle"
                android:text="Resting Electrocardio Graphic Result" />

            <Spinner
                android:id="@+id/spECGLevel"
                android:layout_width="match_parent"
                style="@style/mySpinnerItemStyle"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/myTextViewStyle"
                android:text="Thalach: Maximum Heart Rate" />

            <EditText
                android:id="@+id/edtThalach"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                style="@style/edit_text_style"
                android:hint="Enter heart rate"
                android:inputType="number" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/myTextViewStyle"
                android:text="Exang: Exercise Induced Angina" />

            <Spinner
                android:id="@+id/spExang"
                android:layout_width="match_parent"
                style="@style/mySpinnerItemStyle"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/myTextViewStyle"
                android:text="Oldpeak: ST Depression Induced by Exercise" />

            <EditText
                android:id="@+id/edtOldPeak"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                style="@style/edit_text_style"
                android:hint="Enter oldpeak (0 - 6.2)"
                android:inputType="numberDecimal" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/myTextViewStyle"
                android:text="Slope Of The Peak Exercise ST Segment" />

            <Spinner
                android:id="@+id/spSlope"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/mySpinnerItemStyle"/>

            <TextView
                android:id="@+id/textView12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/myTextViewStyle"
                android:text="Number of Major Vessels (0-3) Colored by Flourosopy" />

            <Spinner
                android:id="@+id/spCa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/mySpinnerItemStyle"/>

            <TextView
                android:id="@+id/textView13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/myTextViewStyle"
                android:text="Thal Scan Result: 3 = normal, 6 = fixed defect, 7 = reversable defect" />

            <Spinner
                android:id="@+id/spThal"
                android:layout_width="match_parent"
                style="@style/mySpinnerItemStyle"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/infer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:textColor="@color/my_tv_text_color"
                android:background="@color/button_color"
                android:text="predict" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>